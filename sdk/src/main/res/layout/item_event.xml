<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pd_wallet_item_background_color"
    android:minHeight="90dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/pd_event_medal"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/wallet_image_dimen"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/wallet_image_dimen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:textSize="45dp"
        android:text="ðŸ…"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/pd_event_medal"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/pd_event_medal"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pd_event_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/pd_wallet_item_default_text_color"
            android:textSize="14sp"
            tools:text="This is an event"
            android:textStyle="bold"/>

    </LinearLayout>


</RelativeLayout>